@article{larsenProtonmotiveForceExbB1999,
  title = {Protonmotive Force, {{ExbB}} and Ligand-Bound {{FepA}} Drive Conformational Changes in {{TonB}}},
  author = {Larsen, Ray A. and Thomas, Michael G. and Postle, Kathleen},
  year = 1999,
