  title = {State-of-the-{{Art Review}}: {{Recurrent Uncomplicated Urinary Tract Infections}} in {{Women}}},
  shorttitle = {State-of-the-{{Art Review}}},
  author = {Advani, Sonali D and Thaden, Joshua T and Perez, Reinaldo and Stair, Sabrina L and Lee, Una J and Siddiqui, Nazema Y},
